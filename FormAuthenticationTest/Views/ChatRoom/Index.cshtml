@{
    ViewBag.Title = "Index";
}

<script type="text/javascript" src="@Url.Content("~/Scripts/jquery-2.0.3.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/jquery.signalR-1.1.3.js")"></script>
<script type="text/javascript" src="~/signalr/hubs"></script>

<link href="~/Content/css/ChatWin.css" rel="stylesheet" />

<script src="~/Scripts/ChatRoom.js"></script>

<div>
    用户名：<input type="text" id="userName" value="Visitor-1" />
    聊天室名：<input type="text" id="roomName" />
    <input type="button" value="创建聊天室" id="btCreateRoom" />
</div>

<div>您所在聊天室：<span id="room"></span></div>

<div class="ChatWin">
    <div id="Msg">
        <div id="MsgContent"></div>
        <!--用来调用该元素的scrollIntoView(false)方法，实现滚动到最下面-->
        <span id="msg_end" style="overflow:hidden"></span>
    </div>
    <div id="Input">
        <textarea id="Message"></textarea>
    </div>
    <div id="buttons">
        <div class="btLayout"><input type="button" id="btSentMsg" value="发送"/></div>
        <div class="btLayout"><input type="button" id="btClearMsg" value="清除"/></div>
    </div>
</div>
<div class="RoomWin">
    
</div>


